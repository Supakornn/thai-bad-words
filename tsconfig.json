  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,          
    "outDir": "./dist",           
    "strict": true,               
    "esModuleInterop": true,
    "lib": ["es2016", "dom"],     
    "moduleResolution": "node"    
  },
  "include": [
    "src/**/*",                   
    "src/types/**/*"              
  ],
  "exclude": [
    "node_modules"                
  ]
}
